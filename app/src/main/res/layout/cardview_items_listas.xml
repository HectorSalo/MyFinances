<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_ingresos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView_concepto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_vacio"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="4dp"
                />


            <TextView
                android:id="@+id/textView_monto_aproximado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_vacio"
                android:textSize="18sp"
                android:gravity="center" />


            <TextView
                android:id="@+id/textView_fecha_aproximada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_vacio"
                android:textSize="18sp"
                android:gravity="center" />


            <TextView
                android:id="@+id/textView_fecha_ingreso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texto_vacio"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginBottom="4dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>