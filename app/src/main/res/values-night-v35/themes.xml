<resources>
    <style name="Theme.MyFinances" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Mantiene comportamiento clÃ¡sico (no edge-to-edge forzado por el sistema) -->
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="Theme.MyFinances.NoActionBar" parent="Theme.MyFinances">
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dialogCornerRadius">16dp</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="Theme.MyFinances.NoActionBar.Home" parent="Theme.MyFinances">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowOptOutEdgeToEdgeEnforcement">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:dialogCornerRadius">16dp</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>
</resources>
