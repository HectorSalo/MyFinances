<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Guideline para 2 columnas -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <!-- Botón transfer (mantienes tu lógica de visibilidad) -->
        <ImageButton
            android:id="@+id/ib_transfer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/texto_vacio"
            android:src="@drawable/ic_transfer_48"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="?attr/colorControlNormal" />

        <!-- CARD: Balance del mes (columna izquierda) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_mid"
            android:layout_marginEnd="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_balance_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/home_balance_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="?android:attr/textColorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tv_balance_badge"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_balance_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="@string/home_badge_loading"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:textColor="?android:attr/textColorPrimary"
                    android:background="@drawable/bg_badge_neutral"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView_monto_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="$0,00"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                    android:textColor="?android:attr/textColorPrimary"
                    app:layout_constraintTop_toBottomOf="@+id/tv_balance_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Métricas: Ingresos / Gastos -->
                <LinearLayout
                    android:id="@+id/row_income_expense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@+id/textView_monto_total"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="?attr/colorControlNormal"
                        app:cardBackgroundColor="?android:attr/colorBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_ingresos_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/menu_ingresos"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                android:textColor="?android:attr/textColorSecondary" />

                            <TextView
                                android:id="@+id/tv_ingresos_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0,00"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                                android:textColor="?android:attr/textColorPrimary" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="1dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="?attr/colorControlNormal"
                        app:cardBackgroundColor="?android:attr/colorBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_gastos_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/menu_egresos"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                                android:textColor="?android:attr/textColorSecondary" />

                            <TextView
                                android:id="@+id/tv_gastos_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$0,00"
                                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                                android:textColor="?android:attr/textColorPrimary" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <!-- Indicador disponible -->
                <TextView
                    android:id="@+id/tv_ratio_label"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:textColor="?android:attr/textColorSecondary"
                    app:layout_constraintTop_toBottomOf="@+id/row_income_expense"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_ratio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:trackThickness="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_ratio_label"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD: Resumen (columna izquierda, debajo del balance) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toBottomOf="@+id/card_balance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_mid"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:id="@+id/summary_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_summary_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_summary_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="?android:attr/textColorPrimary" />

                <!-- ORDEN DEFINITIVO -->
                <include
                    android:id="@+id/row_gastos_varios"
                    layout="@layout/item_summary_row" />

                <include
                    android:id="@+id/row_deudas"
                    layout="@layout/item_summary_row" />

                <include
                    android:id="@+id/row_ahorros"
                    layout="@layout/item_summary_row" />

                <include
                    android:id="@+id/row_prestamos"
                    layout="@layout/item_summary_row" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD: Tasas de cambio (columna derecha) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_rates"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="48dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline_mid"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_rates_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/home_rates_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textColor="?android:attr/textColorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Este texto queda SOLO para "Cargando..." o "Error..." -->
                <TextView
                    android:id="@+id/tv_rates_updated"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/home_rates_loading"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
                    android:textColor="?android:attr/textColorSecondary"
                    app:layout_constraintTop_toBottomOf="@+id/tv_rates_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <GridLayout
                    android:id="@+id/grid_rates"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:columnCount="2"
                    android:rowCount="2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_rates_updated"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <include
                        android:id="@+id/tile_bcv"
                        layout="@layout/item_rate_tile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1" />

                    <include
                        android:id="@+id/tile_paralelo"
                        layout="@layout/item_rate_tile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1" />

                    <include
                        android:id="@+id/tile_euro"
                        layout="@layout/item_rate_tile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1" />

                    <include
                        android:id="@+id/tile_promedio"
                        layout="@layout/item_rate_tile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1" />

                </GridLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
