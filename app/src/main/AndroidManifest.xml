<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skysam.hchirinos.myfinances">

    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".principal.BloqueoActivity"/>
        <activity android:name=".principal.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".principal.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".principal.ListaGastosActivity"
            android:label="@string/title_activity_lista_gastos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".principal.CalculadoraActivity"
            android:label="@string/title_activity_calculadora"
            android:theme="@style/AppTheme.Convertidor" />
        <activity android:name=".principal.AcercaActivity" />
        <activity
            android:name=".editar.EditarActivity"
            android:label="@string/title_activity_editar" />
        <activity android:name=".inicioSesion.RegistrarActivity" />
        <activity android:name=".inicioSesion.InicSesionActivity" />
        <activity
            android:name=".agregar.AgregarActivity"
            android:label="@string/title_activity_agregar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".principal.HomeActivity" />
    </application>

</manifest>